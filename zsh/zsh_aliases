# Color support of ls and grep
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Safety flags
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# ls
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# cd
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias sb="cd ~/dev/sb"

# Misc
alias c="ctags -R"
alias d="gdb"
alias e="vim"
alias ff="find . | xargs grep"
alias fx="firefox"
alias g="git"
alias m="make -j12"
alias rmf="rm -f"
alias suspend="sudo pm-suspend && xlock"
alias u="fg" # For ergo reasons.
alias xl="xlock"
alias v="view"
alias vocab="vim ~/Dropbox/Documents/vocab.txt"

# Fennec
alias f_push="adb install dist/fennec*.apk"
alias f_cpush="adb uninstall org.mozilla.fennec_mcomella && \
               adb install dist/fennec*.apk"
alias f_pbuild="rm -rf mobile/android/base && make -C mobile/android && make package" # p = Partial
alias f_cpbuild="f_pbuild && f_cpush"

alias f_bs="adb push ../mobile/android/chrome/content /sdcard/bootstrapper/content/"

alias f_log="adb logcat -v time"

# Local config
if [ -f $HOME/.zsh_aliases_local ]; then
  . $HOME/.zsh_aliases_local
fi
