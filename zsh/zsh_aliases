# Color support of ls and grep
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'
fi

# Add flags by default.
alias anki="anki -b ~/.anki"
alias cp='cp -i'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias mv='mv -i'
alias rm='rm -i'

# Shorten.
alias a="ant"
alias c="ctags -R"
alias db="cd ~/Dropbox"
alias d="gdb"
alias dl="cd ~/dl"
alias e="vim"
alias ff="find . | xargs grep"
alias fx="firefox"
alias g="git"
alias info="info --vi-keys"
alias la='ls -A'
alias ll='ls -alF'
alias l='ls -CF'
alias mcm="m clean && m"
alias m="make -j9"
alias pac="pacman-color"
alias sb="cd ~/dev/sb"
alias spac="sudo pacman-color"
alias suspend="sudo pm-suspend && xlock"
alias u="fg" # For ergo reasons.
alias v="view"
alias xl="xscreensaver-command -lock"

# Fennec
alias f_push="adb install dist/fennec*.apk"
alias f_cpush="adb uninstall org.mozilla.fennec_mcomella && \
               adb install dist/fennec*.apk"
alias f_pbuild="rm -rf mobile/android/base && make -C mobile/android && make package" # p = Partial
alias f_cpbuild="f_pbuild && f_cpush"

alias f_bs="adb push ../mobile/android/chrome/content /sdcard/bootstrapper/content/"

alias f_log="adb logcat -v time"

# Local config
if [ -f $HOME/.zsh_aliases_local ]; then
  . $HOME/.zsh_aliases_local
fi
